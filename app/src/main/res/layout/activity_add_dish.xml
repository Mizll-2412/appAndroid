<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDishActivity">
    <ImageView
        android:id="@+id/dialogImgHinh"
        android:layout_width="202dp"
        android:layout_height="255dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_1" />

    <ImageButton
        android:id="@+id/dialogCam"
        android:layout_width="79dp"
        android:layout_height="62dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/mybutton"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/dialogImgHinh"
        app:srcCompat="@drawable/cam"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/dialogLib"
        android:layout_width="79dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/mybutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toEndOf="@+id/dialogCam"
        app:layout_constraintTop_toBottomOf="@+id/dialogImgHinh"
        app:srcCompat="@drawable/library"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="58.50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/bg_input"
        android:drawablePadding="10.40dp"
        android:ems="10"
        android:hint="Nhập tên"
        android:inputType="textPersonName"
        android:paddingStart="26dp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryText"
        android:textSize="15.60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtGia"
        android:layout_width="match_parent"
        android:layout_height="58.50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/bg_input"
        android:drawablePadding="10.40dp"
        android:ems="10"
        android:hint="Nhập giá"
        android:inputType="number"
        android:paddingStart="26dp"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/dialogSave"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/mybutton_green"
        app:layout_constraintEnd_toStartOf="@+id/dialogHuy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtGia"
        app:srcCompat="@drawable/diskette"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/dialogHuy"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/mybutton_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialogSave"
        app:layout_constraintTop_toBottomOf="@+id/edtGia"
        app:srcCompat="@drawable/cancel"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>